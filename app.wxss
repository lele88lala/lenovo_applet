/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page{
  background-color:#f0f0f4;
}
/* 超级特权 */
.super-rights{
  position:fixed;
  width:192rpx;
  height:192rpx;
  right:10rpx;
  bottom:50rpx;
}
/* 公共部分--用户、球队顶部信息,都以common开头 */
.common-top-back{
  position:relative;
  background-color:#6e68f6;
  width:100%;
  height:240rpx;
}
.common-user-info{
  position:absolute;
  width:95%;
  background-color:#fff;
  height:290rpx;
  border-radius: 12rpx;
  left:50%;
  transform: translateX(-50%);
  top:35rpx;
  box-shadow: 0 0 10rpx #dbdbdb;
}
.common-head-pic{
  width:140rpx;
  height:140rpx;
  border-radius: 50%;
  border:5rpx solid #6e68f6;
}
.common-info-detail{
  position:relative;
  display:inline-block;
  vertical-align: middle;
}
.common-name{
  color:#333;
  font-size:33rpx;
  text-overflow: ellipsis;
  overflow:hidden;
  width:300rpx;
  white-space: nowrap;
}
.common-user-school,.common-user-team{
  color:#929292;
  font-size:27rpx;
  margin-top:10rpx;
  text-overflow: ellipsis;
  overflow:hidden;
  width:300rpx;
  white-space: nowrap;
}
.common-user-fame{
  color:#929292;
  font-size:27rpx;
  margin-top:10rpx;
}
.common-user-fame text{
  display:inline-block;
  color:#6e68f6;
  margin-left:20rpx;
}
.common-user-fame text:first-child{
  font-size:32rpx;
}

