/* pages/home/teamRank/teamRank.wxss */
.wrapper{
  background-color:#292162;
  padding-bottom:20rpx;
}
.top-select{
  width:100%;
}
.top-select view{
  float:left;
  width:50%;
  text-align: center;
  font-size:33rpx;
  height:100rpx;
  line-height: 100rpx;
  background-color:#fff;
  border-top:1rpx solid #dbdbdb;
}
.top-select view:nth-child(1){
  color:#333;
}
.top-select .selector{
  color:#6e68f6 !important;
}
.top-select image{
  width:24rpx;
  height:24rpx;
  vertical-align: middle
}
 .top-three .head-pic{
  width:110rpx;
  height:110rpx;
  border-radius: 50%;
}
.top-three .hat{
  position:absolute;
  width:67rpx;
  height:71rpx;
  top:-27rpx;
  left:0rpx;
}
.top-three{
  width:100%;
  display:inline-flex;
  justify-content: space-around;
}
.top-three .content{
  position:relative;
  text-align: center;
}
.top-three .left,.top-three .right{
  margin-top:90rpx;
}
.top-three .mid{
  margin-top:40rpx;
}
.top-three .major{
  color:#fff;
  font-size:27rpx;
}
.top-three .school-name{
  color:#bdbdbd;
  font-size:24rpx;
  margin-top:10rpx;
}
.top-three .fame{
  color:#af9039;
  font-size:24rpx;
  margin-top:10rpx;
}
.rank-list{
  width:95%;
  border-radius: 12rpx;
  background-color:#fff;
  margin:0 auto;
  color:#929292;
  font-size:25rpx;
  margin-top:25rpx;
  padding-bottom:20rpx;
}
.rank-list image{
  width:40rpx;
  height:40rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.one-rank{
  display:inline-flex;
  width:95%;
  justify-content: space-around;
  background-color:#d2e3fe;
  height:100rpx;
  line-height: 100rpx;
  margin-top:15rpx;
  margin-left:20rpx;
}
.one-rank view{
  vertical-align: middle;
}
.one-rank .school-info view{
  line-height: 35rpx !important;
}
.one-rank .school-info{
  padding-top:20rpx;
}
.one-rank .school-info .black{
  color:#333;
  font-size:26rpx;
  width:150rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.one-rank .school-info .lower-black{
  width:180rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}