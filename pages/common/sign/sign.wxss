/* pages/common/sign/sign.wxss */
.wrapper{
  position:relative;
  width:100%;
    background-color:#271c5d;
}
.wrapper .bg{
  position:absolute;
  width:100%;
  height:1500rpx;
  z-index: 1;
}
.bottom{
  position:absolute;
  z-index: 2;
  width:100%;
  padding-bottom:20rpx;
  padding-top:50rpx;
}
.top-packet{
  width:100%;
  text-align: center;
}
.first-line{
  display:inline-flex;
  justify-content: space-around;
  width:90%;
  flex-basis: row;
  margin-top:40rpx;
  margin:0 auto;
}
.second-line{
  display:inline-flex;
  justify-content: space-around;
  width:70%;
  flex-basis: row;
  margin:0 auto;
  
}
.first-line image,.second-line image{
  width:163rpx;
  height:158rpx;
}
.packet-wrapper{
  position:relative;
}
.packet-wrapper .one{
  position:absolute;
  top:60rpx;
  left:50rpx;
  color:#fff;
  font-size:27rpx;
}
.packet-wrapper .two{
  position:absolute;
  top:140rpx;
  left:50rpx;
  color:#fff;
  font-size:26rpx;
}
.sign{
  color:#333;
  background-color:#ffd50a;
  width:160rpx;
  height:65rpx;
  line-height: 65rpx;
  text-align: center;
  font-size:29rpx;
  border-radius: 8rpx;
  margin:0 auto;
  box-shadow: 0 0 10rpx #a75454,0 0 30rpx #e76512 inset;
  margin-top:30rpx;
}
.ren-title{
  color:#fff;
  z-index: 2;
  font-size:35rpx;
  margin-top:20rpx;
  margin-left:20rpx;
  margin-bottom:15rpx;
}
.ren{
  width:95%;
  margin:0 auto;
  background-color:#fff;
  border-radius: 12rpx;
  padding-top:20rpx;
  padding-bottom:20rpx;
  margin-top:10rpx;
}
.ren .left{
  display:inline-block;
  font-size:30rpx;
  color:#333;
  padding-left:25rpx;
}
.ren .right{
  width:110rpx;
  color:#fff;
  background-color:#dbdbdb;
  font-size:26rpx;
  text-align: center;
  border-radius: 15rpx;
  padding:5rpx 10rpx;
  float:right;
  margin-top:8rpx;
  margin-right:25rpx;
}
.pre-done{
  background-color:#ffd50a !important;
  color:#333 !important;
}
.done{
  background-color:#6e68f6 !important;
}
.gui-ze{
  width:95%;
  margin:0 auto;
  color:#929292;
  font-size:25rpx;
}
.bottom-btn{
  width:95%;
  background-color:#ffd50a;
  color:#333;
  font-size:30rpx;
  text-align: center;
  margin:0 auto;
  border-radius: 12rpx;
  height:65rpx;
  line-height: 65rpx;
  box-shadow: 0 0 10rpx #dbdbdb;
  margin-top:20rpx;
}
.sign-done{
  background-color:#bdbdbd !important;
  box-shadow: 0 0 10rpx #bdbdbd,0 0 20rpx #bdbdbd inset !important;
  color:#fff !important;
}


