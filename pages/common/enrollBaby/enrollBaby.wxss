/* pages/common/enrollBaby/enrollBaby.wxss */
.top,.mid{
  width:95%;
  border-radius: 12rpx;
  background: #fff;
  box-shadow: 0 0 20rpx #dbdbdb;
  margin:0 auto;
  margin-top:20rpx;
}
.title{
  color:#333;
  font-size:33rpx;
  height:90rpx;
  line-height: 90rpx;
  border-bottom:1rpx solid #dbdbdb;
  padding-left:20rpx;
}
.input-w{
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  border-bottom:1rpx solid #dbdbdb;
}
.input-w .lb{
  display:inline-block;
  color:#333;
  font-size:30rpx;
  padding-left:25rpx;
}
.input-w input{
  display:inline-block;
  font-size:27rpx;
  text-align: right;
  width:600rpx;
  vertical-align: middle;
}
.right-w{
  float:right;
  vertical-align: middle;
  color:#333;
  font-size:27rpx;
}
.right-w image{
  width:30rpx;
  height:30rpx;
  vertical-align: middle;
  margin-left:10rpx;
  margin-right:20rpx;
}
.height-input{
  width:540rpx !important;
}

/* 底部公共信息 */
.bottom-block{
  width:95%;
  background-color:#fff;
  border-radius: 12rpx;
  margin:0 auto;
  padding-top:5rpx;
  margin-top:20rpx;
  font-size:30rpx;
  color:#5e5e5e;
  box-shadow: 0 0 20rpx #dbdbdb;
}
.bottom-block view{
  display:inline-block;
}
.bottom-block .block-one{
  height:60rpx;
  line-height: 60rpx;
  width:100%;
}
.block-one .head-words{
  display:inline-block;
  margin-left:30rpx;
}
.text-a{
  padding-left:30rpx;
  padding-right:30rpx;
  font-size:26rpx;
  width:92%;
  margin:0 auto;
  height:80rpx !important;
  padding-bottom:10rpx;
}
textarea{
  height:80rpx;
  width:100%;
}
.head-w{
  width:95%;
  border-radius: 12rpx;
  margin:0 auto;
  background-color:#fff;
  margin-top:20rpx;
  box-shadow: 0 0 20rpx #dbdbdb;
  padding-top:20rpx;
  padding-bottom:20rpx;
}
.head-w .head-w-l{
  display:inline-block;
  width:500rpx;
  color:#333;
  font-size:30rpx;
  vertical-align: middle;
  padding-left:30rpx;
}
.head-w .head-w-r{
  width:150rpx;
  height:150rpx;
  vertical-align: middle;
}
.desc{
  color:#929292;
  font-size:24rpx;
  letter-spacing: 3rpx;
}
.head-title{
  margin-bottom:20rpx;
}
.bottom-btn{
  width:95%;
  border-radius: 12rpx;
  background:linear-gradient(to right,#6e68f6,#e347aa);
  margin:0 auto;
  text-align: center;
  color:#fff;
  font-size:30rpx;
  height:70rpx;
  line-height: 70rpx;
  margin-top:20rpx;
}