/* pages/tabBar/baby/baby.wxss */
.top-img{
  position:relative;
  width:100%;
  margin:0 auto;
  margin-top:20rpx;
}
.top-img image{
  width:100%;
  height:320rpx;
}
.top-img  .jiang-btn{
  position:absolute;
  width:180rpx;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  top:240rpx;
  color:#fff;
  background:linear-gradient(to right,#6e68f6,#e347aa);
  border-radius: 30rpx;
  font-size:28rpx;
  box-shadow: 0 0 30rpx #fff,0 0 40rpx #fff inset;
  padding:0rpx 25rpx;
  left:50%;
  transform: translateX(-50%);
}
.tab{
  width:100%;
  background-color:#fff;
  height:95rpx;
  line-height: 95rpx;
  margin-top:0rpx;
}
.tab .total-bang,.tab .school-bang{
  float:left;
  width:50%;
  text-align: center;
  font-size:35rpx;
  color:#333;
}
.school-bang image{
  width:24rpx;
  height:24rpx;
  vertical-align: middle;
  margin-left:20rpx;
}
.tab-on{
  color:#6e68f6 !important;
}
.baby-wrapper{
  display:inline-flex;
  flex-wrap: wrap;
  width:98%;
  border-radius: 20rpx;
  background-color:#fff;
  margin-left:8rpx;
  margin-top:20rpx;
  padding-top:30rpx;
  padding-bottom:20rpx;
}
.baby{
  position:relative;
  text-align: center;
  margin-top:30rpx;
  margin-left:22rpx;
}
.baby .head-pic{
  width:200rpx;
  height:260rpx;
  border:10rpx solid #e98ac8;
  border-radius: 10rpx;
}
.baby-name{
  font-size:27rpx;
  color:#333;
}
.baby-school{
  font-size:20rpx;
  color:#929292;
}
.fame{
  font-size:20rpx;
  color:#ef5350;
}
.gift-btn{
  width:130rpx;
  background:linear-gradient(to right,#6e68f6,#e347aa);
  color:#fff;
  font-size:26rpx;
  text-align: center;
  border-radius: 20rpx;
  margin:0 auto;
  margin-top:20rpx;
  box-shadow: 0 0 20rpx #dbdbdb;
  padding:3rpx 0rpx;
}
.top-icon{
  position:absolute;
  width:103rpx;
  height:58rpx;
  top:-55rpx;
  left:50%;
  transform: translateX(-50%);
}