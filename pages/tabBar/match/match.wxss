/* pages/home/matchList/matchList.wxss */
/* 顶部选择 */
.top-select{
  width:95%;
  background-color:#6e68f6;
  color:#fff;
  font-size:28rpx;
  text-align: center;
  border-radius: 12rpx;
  margin:0 auto;
  height:60rpx;
  line-height: 60rpx;
  margin-top:20rpx;
}
.date-mark{
  width:100%;
  height:90rpx;
  line-height: 90rpx;
  color:#929292;
  font-size:27rpx;
  text-align: center;
}
.match-wrapper{
  width:95%;
  margin:0 auto;
  border-radius: 12rpx;
  background-color:#fff;
  box-shadow: 0rpx 0rpx 60rpx #dbdbdb;
}
.match-wrapper .one-match-block{
  padding-bottom:25rpx;
  border-bottom:1px solid #ececec;
}
.match-wrapper .one-match-block .time{
  color:#929292;
  font-size:24rpx;
  width:100%;
  padding-top:20rpx;
}
.match-wrapper .one-match-block .time view{
  width:100rpx;
  margin-left:50rpx;
}

.match-wrapper .one-match-block .left{
  display:inline-block;
  width:50%;
  color:#5e5e5e;
  font-size:32rpx;
  text-align: center;
  vertical-align: middle;
}
.match-wrapper .one-match-block .left view{
  margin-top:20rpx;
}
.match-wrapper .one-match-block .mid view{
  margin-top:20rpx;
}
.match-wrapper .one-match-block .mid{
  display:inline-block;
  width:20%;
  color:#929292;
  font-size:33rpx;
  text-align: right;
  vertical-align: middle;
}
.match-wrapper .one-match-block .right{
  display:inline-block;
  width:29%;
  color:#929292;
  font-size:25rpx;
  text-align: center;
  vertical-align: middle;
}
.on-red{
  color:red !important;
}