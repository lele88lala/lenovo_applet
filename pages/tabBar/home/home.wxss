/* pages/tabBar/home/home.wxss */
/* 轮播图 */
swiper{
  width:100%;
  height:340rpx;
  margin-top:20rpx;
}
.slide-image{
  width:100%;
  height:340rpx;
}
/* 导航 */
.nav{
  display:inline-flex;
  width:100%;
  justify-content: space-around;
  font-size:27rpx;
  color:#333;
  background-color:#fff;
  margin-top:20rpx;
  box-shadow: 0rpx 0rpx 60rpx #dbdbdb;
  padding-top:20rpx;
  padding-bottom:20rpx;
}
.nav .nav-block{
  display:flex;
  flex-direction: column;
  align-items: center;
}
.nav .nav-block image{
  display:block;
  margin-bottom:15rpx;
}
.nav .nav-block image,.nav .nav-block text{
  display:block;
}
.nav .nav-block image{
  width:60rpx;
  height:60rpx;
}
/* 即将开赛 */
.kai-sai{
  width:100%;
  height:90rpx;
  line-height: 90rpx;
  font-size:34rpx;
  background-color:#fff;
  margin-top:20rpx;
  color:#333;
  box-shadow: 0rpx 0rpx 60rpx #dbdbdb;
}
.kai-sai .head-words{
  display:inline-block;
  margin-left:20rpx;
}
.kai-sai image{
  width:30rpx;
  height:30rpx;
  vertical-align: middle;
}
.kai-sai .more-match{
  display:block;
  font-size:27rpx;
  float:right;
  margin-right:40rpx;
  color:#929292;
}
.scroll-view{
  width:100%;
}
.match{
  display:inline-flex;
  flex-direction: row;
  background-color:#fff;
  padding-bottom:30rpx;
}
.one-match image{
  width:45rpx;
  height:45rpx;
  border-radius: 50%;
  margin-left:20rpx;
  vertical-align: top;
}
.one-match{
  display:inline-flex;
  align-items: center;
  margin-left:20rpx;
}
.one-match .left{
  background-color:#6468f6;
  border-top-left-radius: 12rpx;
  border-bottom-left-radius: 12rpx;
  width:40rpx;
  color:#fff;
  font-size:28rpx;
  padding:40rpx 0rpx 40rpx 15rpx;
}
.one-match .right{
  background-color:#f7f7f7;
  border-top-right-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
  color:#666;
  font-size:26rpx;
  padding:20rpx 20rpx 20rpx 9rpx;
  width:240rpx;
}
.one-match .right .school{
  display:inline-block;
  width:160rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  padding-left:10rpx;
}
.one-match .right .time{
  color:#929292;
  font-size:22rpx;
  margin-left:100rpx;
}
/* 篮球宝贝 */
.img-list{
  width:100%;
  background-color:#fff;
  display:inline-flex;
  flex-wrap: wrap-reverse;
}
.img-list image{
  display:block;
  width:340rpx;
  border-radius: 12rpx;
  margin-left:25rpx;
}