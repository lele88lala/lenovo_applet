<!--pages/mall/experience/experience.wxml-->
<view class="top-title">预约体验</view>
<view class="desc">填写您的申请信息，方便我们与您联系</view>
<view class="mid">
  <view class="name-w">
    <view class="name-l">
      <text>姓名</text>
    </view>
    <input type="text" placeholder='请输入姓名'></input>
  </view>
  <view class="name-w">
    <view class="name-l">
      <text>手机</text>
    </view>
    <input type="text" placeholder='请输入手机号'></input>
  </view>
  <view class="name-w">
    <view class="name-l">
      <text>学校</text>
    </view>
    <input type="text" placeholder='请输入手学校'></input>
  </view>
  <picker class="name-w"  value="{{index}}" range="{{array}}">
    <view class="name-l">
      <text> 体验地点</text>
    </view>
    <view class="name-r">
     请选择<image src="../../../images/btn_more.png"></image>
    </view>
  </picker>
</view>
<view class="btn">提交</view>