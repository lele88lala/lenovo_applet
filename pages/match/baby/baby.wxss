/* pages/match/player/player.wxss */
.me-head{
  margin-left:40rpx;
  vertical-align: middle;
  margin-top:-20rpx;
}
.player-detail{
  margin-left:20rpx;
  margin-top:35rpx;
}
.guan-zhu{
  position:absolute;
  width:90rpx;
  color:#fff;
  font-size:27rpx;
  text-align: center;
  background:linear-gradient(to right,#6e68f6,#e347aa);
  border-radius: 5rpx;
  top:30rpx;
  right:30rpx;
  box-shadow: 0 0 1rpx #f8cc00;
  padding:10rpx 20rpx;
}
/* 个人数据 */
.my-tab{
  margin-top:110rpx;
  box-shadow: 0 0 10rpx #dbdbdb;
}
/* 照片部分 */
.data-wrapper{
  width:100%;
  margin-top:20rpx;
  background-color:#fff;  
  text-align: center;
  padding-top:40rpx;
}
.col-one,.col-two{
  display:inline-block;
  width:45%;
  margin-top:0rpx;
  vertical-align: top;
}
.col-two{
  margin-left:20rpx;
  
}
.photo-wrapper{
  height:780rpx;
}

/* 加人气分享 */
.add-share-icon{
  position:fixed;
  display:inline-flex;
  flex-direction: column;
  height:280rpx;
  justify-content: space-around;
  bottom:190rpx;
  right:20rpx;
}
.add-share-icon cover-image{
  width:99rpx;
  height:99rpx;
}
scroll-view{
  height:600rpx;
  border-radius: 12rpx;
}
.leave-scroll{
  margin-top:10rpx;
}
.my-class{
  margin-top:10rpx;
  font-size:25rpx;
}
/* 竞猜模块 */
.top-info{
  position:relative;
  width:95%;
  margin:0 auto;
  background-color:#fff;
  border-radius: 12rpx;
  margin-top:20rpx;
  height:340rpx;
} 
.top-info .bg-img{
  position:absolute;
  width:100%;
  height:355rpx;
  top:0;
  left:0;
  z-index: -1;
}
.match-name{
  text-align: center;
  margin:0 auto;
  color:#929292;
  font-size:25rpx;
  padding-top:20rpx;
  width:650rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  letter-spacing: 5rpx;
}
.event-info{
  width:100%;
  display:inline-flex;
  margin-left:20rpx;
  margin-top:20rpx;
}
.team image{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
}
.team {
  color:#333;
  font-size:28rpx;
  text-align: center;
}
.team view{
  width:180rpx;
  margin-top:15rpx;
}
.score-info{
  text-align: center;
  width:320rpx;
  margin-top:20rpx;
}
.score{
  color:#dbdbdb;
  font-size:44rpx;
  vertical-align: middle;
}
.vs{
  color:#333;
  font-size:35rpx;
  vertical-align: top;
  padding-left:40rpx;
  padding-right:40rpx;
}
.time{
  color:#929292;
  font-size:20rpx;
  margin-top:50rpx;
  letter-spacing: 3rpx;
} 
.tips-title{
  width:100%;
  font-size:31rpx;
  color:#222;
  height:100rpx;
  line-height: 100rpx;
  padding-left:20rpx;
}
.tou-info{
  font-size:27rpx;
  color:#333;
  margin-top:10rpx;
  padding-left:25rpx;
  padding-bottom:20rpx;
}
.tou-info text{
  display:inline-block;
  padding-left:25rpx;
  padding-right:25rpx;
  color:#6e68f6;
}
.data-scroll{
  height:730rpx;
}
/* 留言样式 */
.input-leave-words{
  position:absolute;
  bottom:130rpx;
  width:100%;
  background-color:#f0f0f4;
  height:100rpx;
  line-height: 100rpx;
}
.input-leave-words view{
  display:inline-block;
}
.input-leave-words input{
  width:600rpx;
  background-color:#fff;
  height:70rpx;
  border-radius: 30rpx;
  margin-top:15rpx;
  outline: none;
  display:inline-block;
}
.input-leave-words .inp-w{
  margin-left:20rpx;
}
.leave-done{
  color:#6e68f6;
  font-size:29rpx;
  margin-left:30rpx;
  vertical-align: middle;
  padding-right:30rpx;
}
/* 礼物 */
.player-scroll{
  height:700rpx;
  background-color:#fff;
  border-radius: 12rpx;
  width:95%;
  margin:0 auto;
  margin-top:20rpx;
  padding-left:40rpx;
}
.li-one{
  margin-top:30rpx;
}
.player-scroll image{
  width:40rpx;
  height:40rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.player-scroll view{
  display:inline-block;
  font-size:26rpx;
}
.player-scroll .name{
  color:#e347aa;
  margin-left:15rpx;
  width:100rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  vertical-align: middle;
}
.player-scroll .w-one{
  color:#929292;
}
.player-scroll .w-two{
  color:#6e68f6;
  margin-left:30rpx;
}
.player-scroll .w-three{
  color:#333;
  letter-spacing: 10rpx;
  margin-left:10rpx;
  width:70rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  vertical-align: middle;
}
.player-scroll .w-four{
  color:#929292;
}
/* 送礼物弹层 */
.li-wrapper{
  position:fixed;
  bottom:-520rpx;
  transition: bottom .5s;
  z-index: 2;
}
.li-wrapper-tan{
  bottom:0rpx;
}
.g-img-w{
  display:inline-flex;
  flex-wrap: wrap;
  justify-content: space-around;
  width:100%;
  background-color:rgba(0, 0, 0, .85);
  padding-bottom:10rpx;
}
.g-w{
  padding:10rpx 30rpx;
  text-align: center;
  border:1rpx solid rgba(0, 0, 0, 0);
}
.g-w-on{
  border:1rpx solid #f8cc00;
}
.g-img-w image{
  width:77rpx;
  height:95rpx;
}
.li-wrapper .top-title{
  width:100%;
  border-bottom:1rpx solid #929292;
  background-color:rgba(0, 0, 0, .85);
}
.li-wrapper .top-title .l{
  color:#fff;
  font-size:29rpx;
  padding-left:30rpx;
  height:80rpx;
  line-height: 80rpx;
}
.li-wrapper .top-title .r{
  float:right;
  color:#f8cc00;
  font-size:27rpx;
  margin-top:-55rpx;
  margin-right:20rpx;
  border-bottom:1rpx solid #f8cc00;
}
.bottom-btn{
  width:100%;
  height:100rpx;
}
.bottom-btn .b-l,.bottom-btn .b-r{
  float:left;
  text-align: center;
}
.bottom-btn .b-l {
  background-color:#fff;
  height:100rpx;
  width:60%;
}
.bottom-btn .b-r {
  background:linear-gradient(to right,#6e68f6,#e347aa);
  color:#fff;
  font-size:30rpx;
  height:100rpx;
  width:40%;
  line-height: 100rpx;
}
.coin-w{
  color:#fff;
  font-size:24rpx;
}
.coin-w image{
  width:35rpx;
  height:35rpx;
  vertical-align: middle;
  margin-right:10rpx;
}
.b-l text{
  display:inline-block;
  text-align: center;
  padding:10rpx 30rpx;
  font-size:29rpx;
}
.b-l view{
  margin-top:20rpx;
}
.b-l .jian,.b-l .jia{
  border:1rpx solid #6e68f6;
  color:#6e68f6;
}

.b-l .count{
  border-top:1rpx solid #6e68f6;
  border-bottom:1rpx solid #6e68f6;
  width:90rpx;
}
.meng-ceng{
  position:fixed;
  top:0;
  left:0;
  right:0;
  bottom:0;
  background-color:rgba(0, 0, 0, 0);
  z-index: 1;
}


