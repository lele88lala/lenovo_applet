}
.tan-wrapper-up{
  /* height:378rpx !important; */
  bottom:0;
      /* transition:bottom 1s; */

}
.tan-wrapper .tan-top{
  padding-bottom:20rpx;
}
.tan-wrapper .tan-top-word{
  color:#fff;
