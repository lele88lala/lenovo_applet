/* pages/mine/attention/attention.wxss */
.person{
  width:95%;
  margin:0 auto;
  background-color:#fff;
  border-radius: 12rpx;
  padding-top:30rpx;
  padding-bottom:30rpx;
  box-shadow: 0 0 20rpx #dbdbdb;
  margin-top:15rpx;
}
.person image{
  width:95rpx;
  height:95rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-left:30rpx;
}
.person .user-info{
  display:inline-block;
  vertical-align: middle;
  margin-left:25rpx;
  width:400rpx;
}
.person .attention{
  display:inline-block;
  vertical-align: middle;
}
.person .user-info .user-name{
  color:#333;
  font-size:31rpx;
  width:400rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.person .user-info .user-type{
  color:#929292;
  font-size:25rpx;
  margin-top:10rpx;
  width:400rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.person .attention{
  width:110rpx;
  text-align: center;
  font-size:27rpx;
  color:#fff;
  border-radius: 8rpx;
  padding:10rpx 10rpx;
  background:linear-gradient(to right,#6e68f6,#e347aa);
}
.no-attention{
  background:#bdbdbd !important;
  color:#fff;
}