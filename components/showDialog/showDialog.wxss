/* components/showDialog/showDialog.wxss */
.wrapper{
  position:fixed;
  width:100%;
  height:100vh;
  left:0;
  right:0;
  top:0;
  bottom:0;
  background-color:rgba(0, 0, 0, .6);
}
.content{
  width:80%;
  border-radius: 12rpx;
  margin:0 auto;
  background-color:#fff;
  margin-top:300rpx;
  padding-bottom:40rpx;
}
.bottom-content{
  background-color:#ececec;
  width:90%;
  margin:0 auto;
  padding-bottom:30rpx;
  padding-top:30rpx;
}
.head-img{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-left:40rpx;
}
.qun-w{
  display:inline-block;
  vertical-align: middle;
  margin-left:20rpx;
}
.qun-w .top{
  color:#333;
  font-size:30rpx;
}
.qun-w .bot{
  color:#929292;
  font-size:25rpx;
}
.b-btn image{
  width:40rpx;
  height:40rpx;
  vertical-align: middle;
}
.b-btn{
  font-size:27rpx;
  color:#333;
  width:300rpx;
  text-align: center;
  height:50rpx;
  line-height: 50rpx;
  background-color:#fff;
  margin:0 auto;
  border-radius: 10rpx;
  margin-top:30rpx;
}
